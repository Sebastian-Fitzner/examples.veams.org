{{! ---
general: u-section
============================================

Requirements:
- (only hbs)

Options:
- sectionClasses {String} - Modifier classes

Important Notes:

--- }}

<section
		class="u-section{{#if options.sectionClasses}} {{options.sectionClasses}}{{/if}}{{#if bgColor}} is-bg-color-{{bgColor}}{{/if}}{{#if options.center}} is-centered{{/if}}"
		id="{{dashcase (lowercase options.headline)}}">

	{{#if options.headline}}
		<div class="section__header is-container{{#if options.headerCenter}} is-centered{{/if}}">
			<h2 class="section__headline{{#if options.headerClasses}} {{options.headerClasses}}{{/if}}">
				{{options.headline}}
			</h2>
		</div>
	{{/if}}

	<div class="section__content{{#unless options.fullWidth}} is-container{{/unless}}">
		{{{yield}}}
	</div>

	{{#if options.bash}}
		<div class="section__footer is-container">
			<h3 class="section__h3">
				Installation
			</h3>
		<pre>
			<code class="section__code bash">veams {{options.bash}}</code>
		</pre>
		</div>
	{{/if}}
</section>
